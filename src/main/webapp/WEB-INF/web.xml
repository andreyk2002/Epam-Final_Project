<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>com.epam.web.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>loginfilter</filter-name>
        <filter-class>com.epam.web.filter.AnonymousAccessFilter</filter-class>
        <init-param>
            <param-name>loginCommand</param-name>
            <param-value>loginPage</param-value>
        </init-param>
        <init-param>
            <param-name>errorPage</param-name>
            <param-value>/error.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>loginPage</param-name>
            <param-value>/index.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>loginfilter</filter-name>
        <url-pattern>/controller</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>checkRoleFilter</filter-name>
        <filter-class>com.epam.web.filter.AdminAccessFilter</filter-class>
        <init-param>
            <param-name>errorPage</param-name>
            <param-value>/error.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>checkRoleFilter</filter-name>
        <url-pattern>/WEB-INF/view/userManage.jsp</url-pattern>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>updateUserFilter</filter-name>
        <filter-class>com.epam.web.filter.UpdateUserFilter</filter-class>
        <init-param>
            <param-name>getUserCommand</param-name>
            <param-value>getUser</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>updateUserFilter</filter-name>
        <url-pattern>/WEB-INF/view/personal.jsp</url-pattern>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>customTags</taglib-uri>
            <taglib-location>/WEB-INF/tld/testTag.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>
